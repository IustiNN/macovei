.hero
  position: relative
  max-width: 1600px
  margin: 0 auto

  @media (max-width: 767px)
    height: 20em
    top: 64px
    position: fixed
    width: 100%
    z-index: -20

  .banner
    width: 100%

    @media (max-width: 767px)
      display: none

  .overlay
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%

    .social-btns
      position: absolute
      h = 2em
      left: h * 0.50

      @media (max-width: 767px)
        display: none

      img
        width: h

      a:nth-child(1)
        position: absolute
        top: h * 0.50

      a:nth-child(2)
        position: absolute
        top: h * 1.75

      a:nth-child(3)
        position: absolute
        top: h * 3.0

    .logo
      position: absolute
      width: 25%
      right: 10%

      @media (max-width: 767px)
        display: none

    .quote-box
      background: linear-gradient(top, rgba(darken(#0e517e, 30%), 0.9) 0%, rgba(darken(#222d4f, 30%), 0.9) 100%);
      height: 12em
      border-bottom: 0.5em solid rgba(mm-red, 0.8)
      position: absolute
      bottom: 1em
      right: 0
      width: 50%

      blockquote
        border: 0
        color: white
        font-weight: 300
        font-size: 1.75em
        line-height: 1em
        position: absolute
        top: 50%
        left: 50%
        transform: translate3d(-50%, -50%, 0)
        width: 80%

        &:before
          content: '\201C'
          padding-right: 2px
          margin-left: -22px
        &:after
          content: '\201D'
          margin-left: 2px
        &:before, &:after
          font-size: 150%
          line-height: .1em
          position: relative
          top: 6px

      .author
        position: absolute
        bottom: 2em
        right: 2em

      @media (min-width: 900px) and (max-width: 1024px)
        font-size: 0.7em
        height: 14em
        blockquote:before
          margin-left: -16px

        .author
          transform: scale(0.8)

      @media (min-width: 768px) and (max-width: 900px)
        font-size: 0.5em
        height: 14em
        blockquote:before
          margin-left: -12px

        .author
          transform: scale(0.7)

      @media (max-width: 767px)
        width: 100%
        height: 100%
        z-index: -20
        blockquote:before
          margin-left: -16px

.call-to-action
  div:nth-child(1)
    h1
      background: mm-dark-blue
      &:after
        border-top: 30px solid mm-dark-blue
  div:nth-child(2)
    h1
      background: mm-blue
      &:after
        border-top: 30px solid mm-blue
  div:nth-child(3)
    h1
      background: mm-light-blue
      &:after
        border-top: 30px solid mm-light-blue

  .column
    background: white
    margin-top: 15px
    height: 25em

    @media (min-width: 1024px) and (max-width: 1199px)
      font-size: 0.8em

    @media (min-width: 768px) and (max-width: 1023px)
      font-size: 0.6em
      height: 28em

    h1
      margin: 0
      color: white
      text-transform: uppercase
      text-align: center
      padding: 1em 0
      font-size: 1.5em
      font-weight: 300
      position: relative

      &:after
        content: ""
        position: absolute
        bottom: -15px
        left: 50%
        width: 0
        height: 0
        transform: translate3d(-50%, 0, 0)
        border-left: 100px solid transparent
        border-right: 100px solid transparent
        border-top: 30px solid mm-dark-blue

    .lead
      color: mm-red
      font-style: italic
      font-size: 1.4em
      padding: 1em
      text-align: center
      margin: 0

    .link
      border: none
      border-radius: 0
      color: white
      position: absolute
      font-size: 1.5em
      top: 10.5em
      left: 50%
      transform: translate3d(-50%, 0, 0)
      padding: 0.4em
      width: 80%
      transition: background 0.1s
      background: mm-orange

      &:hover
        background: mm-dark-blue

    .questions
      position: absolute
      top: 20em
      li
        font-size: 1em
        line-height: 1.5em

      @media (min-width: 768px) and (max-width: 1023px)
        li
          font-size: 1.3em
