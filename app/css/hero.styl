.hero
  position: relative
  max-width: 1440px
  margin: 0 auto

  .banner
    width: 100%

  .overlay
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%

    .social-btns
      position: absolute
      h = 4em
      left: h * 0.50

      img
        width: h

      a:nth-child(1)
        position: absolute
        top: h * 0.50

      a:nth-child(2)
        position: absolute
        top: h * 1.75

      a:nth-child(3)
        position: absolute
        top: h * 3.0

    .logo
      position: absolute
      width: 20%
      right: 10%
      top: 10%

    .quote-box
      background: rgba(9, 46, 78, 0.9)
      height: 15em
      border-bottom: 0.5em solid rgba(194, 0, 0, 0.8)
      position: absolute
      bottom: 1em
      right: 0
      width: 50%

      .quote
        color: white
        font-family: 'Source Sans Pro'
        font-weight: 300
        font-size: 2.0em
        position: absolute
        top: 50%
        left: 50%
        transform: translate3d(-50%, -50%, 0)
        width: 75%

        &:before
          content: '\201C'
          padding-right: 2px
          margin-left: -17px
        &:after
          content: '\201D'
          margin-left: 2px
        &:before, &:after
          font-size: 150%
          line-height: .1em
          position: relative
          top: 6px

      .author
        position: absolute
        bottom: 2em
        right: 2em
