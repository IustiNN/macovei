.hero
  position: relative
  max-width: 1600px
  margin: 0 auto

  .banner
    width: 100%

  .overlay
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%

    .social-btns
      position: absolute
      h = 3em
      left: h * 0.50

      img
        width: h

      a:nth-child(1)
        position: absolute
        top: h * 0.50

      a:nth-child(2)
        position: absolute
        top: h * 1.75

      a:nth-child(3)
        position: absolute
        top: h * 3.0

    .logo
      position: absolute
      width: 20%
      right: 10%
      top: 10%

    .quote-box
      background: rgba(9, 46, 78, 0.9)
      height: 15em
      border-bottom: 0.5em solid rgba(mm-red, 0.8)
      position: absolute
      bottom: 1em
      right: 0
      width: 50%

      blockquote
        border: 0
        color: white
        font-weight: 300
        font-size: 1.75em
        line-height: 1em
        position: absolute
        top: 50%
        left: 50%
        transform: translate3d(-50%, -50%, 0)
        width: 80%

        &:before
          content: '\201C'
          padding-right: 2px
          margin-left: -17px
        &:after
          content: '\201D'
          margin-left: 2px
        &:before, &:after
          font-size: 150%
          line-height: .1em
          position: relative
          top: 6px

      .author
        position: absolute
        bottom: 2em
        right: 2em

.call-to-action
  .column
    height: 25em

    @media (min-width: 768px)
      &:nth-child(1)
        padding-right: 0
      &:nth-child(2)
        padding-left: 0
        padding-right: 0
        border-left: 1px solid rgba(#000, 0.3)
        border-right: 1px solid rgba(#000, 0.3)
      &:nth-child(3)
        padding-left: 0

    &:nth-child(1)
      h1
        background: mm-dark-blue
    &:nth-child(2)
      h1
        background: mm-blue
    &:nth-child(3)
      h1
        background: mm-light-blue

    h1
      margin: 0
      color: white
      text-transform: uppercase
      text-align: center
      padding: 1em 0
      font-size: 1.5em
      font-weight: 300

    .lead
      color: mm-red
      font-style: italic
      font-size: 1.5em
      padding: 1em
      text-align: center
      margin: 0

    .link
      border: none
      border-radius: 0
      color: white
      position: absolute
      font-size: 1.5em
      top: 33rem
      left: 50%
      transform: translate3d(-50%, 0, 0)
      padding: 0.4em
      width: 80%
      transition: background 0.1s
      background: #4A4A4A

      &:hover
        background: mm-red

    .questions
      position: absolute
      top: 40rem
      li
        font-size: 1em
        line-height: 1.5em
