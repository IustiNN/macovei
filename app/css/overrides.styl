// Wrap links so that they don't overflow their parent container.
a
  word-wrap: break-word

.navbar
  background: rgba(9, 46, 78, 1.0)
  border: 0
  border-radius: 0
  margin: 0

  .navbar-toggle
    background: transparent
    border: 1px solid white
    border-radius: 0

    .icon-bar
      background: white

    &:hover
      background: lighten(mm-red, 50%)

  .navbar-collapse
    border-color: transparent

  .navbar-nav > li > a, a.navbar-brand
    color: white
    font-weight: 400
    transition: color 0.1s
    &:hover
      background: mm-red

  & .open > a, .nav .open > a:hover
    background: mm-red
    cursor: pointer

.dropdown-menu > li > a:hover, .dropdown-menu > li > a:focus
  background: mm-red
  color: white
