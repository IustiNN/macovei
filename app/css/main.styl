font-family-sans ?=  'Source Sans Pro', 'Helvetica Neue', Helvetica, Arial, sans-serif
font-family-futura ?= Futura, Futura-Medium, 'Futura Medium', 'Century Gothic', CenturyGothic, 'Apple Gothic', AppleGothic, 'URW Gothic L', 'Avant Garde', Avenir, sans-serif;
mm-dark-blue ?= #232A50
mm-blue ?= #00679E
mm-light-blue ?= #99B0FF
mm-red ?= #9D0000
mm-orange ?= #e69822

body
  font-size: 20px
  line-height: 1.5em
  font-family: font-family-sans
  background: #eee
  padding-top: 50px

  @media (max-width: 767px)
    font-size: 14px
    padding-top: 43px + 20 * 14px

@import overrides
@import media
@import hero

.content
  margin-top: 15px
  padding: 15px
  background: white

[role="page-container"]
  @media (max-width: 767px)
    background: #eee
    border-top: 0.5em solid rgba(mm-red, 1.0)

.post
  blockquote
    font-size: 1em
    line-height: 1.5em

#mc_embed_signup input.button
  background: mm-orange
  transition: background .1s linear
  &:hover
    background: mm-dark-blue
