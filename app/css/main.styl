// Wrap links so that they don't overflow their parent container.
a
  word-wrap: break-word

@import media

.hero
  padding-top: 0

  .overlay
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%

    .social-btns
      position: absolute
      h = 54px
      left: (h / 2)

      img:nth-child(1)
        position: absolute
        top: (h / 2)

      img:nth-child(2)
        position: absolute
        top: h + h

      img:nth-child(3)
        position: absolute
        top: h + h + h + (h / 2)

    .logo
      position: absolute
      top: 5%
      right: 15%
      width: 25%

    .quotation
      background: rgba(9, 46, 78, 0.9)
      height: 15em
      border-bottom: 0.5em solid rgba(194, 0, 0, 0.8)
      position: absolute
      top: 50%
      right: 15px
      width: 50%

      .quote
        color: white
        font-family: 'Source Sans Pro'
        font-weight: 300
        font-size: 1.5em
        position: absolute
        top: 50%
        left: 50%
        transform: translate3d(-50%, -50%, 0)
        width: 400px

        &:before
          content: '\201C'
          padding-right: 2px
          margin-left: -13px
        &:after
          content: '\201D'
          margin-left: 2px
        &:before, &:after
          font-size: 150%
          line-height: .1em
          position: relative
          top: 6px

      .author
        position: absolute
        bottom: 2em
        right: 2em
