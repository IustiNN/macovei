@import variables
@import overrides
@import media
@import hero
@import msie

body
  font-size: 20px
  line-height: 1.5em
  font-family: font-family-sans
  background: #eee
  padding-top: 50px

  @media (max-width: 767px)
    font-size: 14px
    padding-top: 43px + 20 * 14px

.content
  margin-top: 15px
  padding: 15px
  background: white

[role="page-container"]
  @media (max-width: 767px)
    background: #eee
    border-top: 0.5em solid rgba(mm-red, 1.0)

.post
  blockquote
    font-size: 1em
    line-height: 1.5em

#mc_embed_signup input.button
  background: mm-orange
  transition: background .1s linear
  &:hover
    background: mm-dark-blue
