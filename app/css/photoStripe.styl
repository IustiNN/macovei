.photoStripe
  position: relative
  height: 100vh
  width: 100vw
  color: white
  overflow: hidden
  .imgBack
    position: absolute;
    top: -50%;
    left: -50%;
    height: 200%
    width: 200%
    img
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      margin: auto;
      min-width: 50%;
      min-height: 50%;
  .hotlinks
    a
      padding: 0.2em 0.6em
      // display: block
      border: 3px solid white
      color: white
      text-decoration: none
      margin-left: 1em
      margin-right: 1em
      &:hover
        background: white
        color: black
        text-decoration: none

  @media (max-width: 767px)
    .imgBack
      top: -50%;

  @media (max-width: 500px)
    .imgBack
      left: -140%;
  .overlay
    position: absolute
    top: 0
    background: rgba(0,0,0,0.4)
    height: 100%
    width: 100%
    .callout
      margin-top: 40vh
      text-align: center
      font-size: 2.3em
      line-height: 110%
    .hotlinks
      margin-top: 1em
      text-align: center
      font-size: 1em

    .chevron
      position: absolute
      left: 50%
      transform: translateX(-50%)
      bottom: 10px
      .hi-icon-wrap
        padding: 0
        .hi-icon
          margin: 0
          font-size: 15px
          width: 45px
          height: 45px
          z-index: 0
          &:hover
            box-shadow: 0 0 0 5px rgba(255,255,255,1)
          i
            position: absolute
            top: 50%
            left: 50%
            transform: translate3d(-50%, -50%, 0);
      @media(max-width: 767px)
        .chevron
          bottom: 0
  video
    min-width: 100%
    min-height: 100%
